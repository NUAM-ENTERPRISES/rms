// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RefreshToken {
  id         String   @id @default(cuid()) // public token id (rfi)
  userId     String
  familyId   String
  hash       String               // Argon2 hash of the secret value (rft)
  expiresAt  DateTime
  revokedAt  DateTime?
  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([familyId])
  @@index([expiresAt])
  @@map("refresh_tokens")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String
  password      String
  dateOfBirth   DateTime?
  phone         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  userRoles     UserRole[]
  userTeams     UserTeam[]
  refreshTokens RefreshToken[]
  createdProjects Project[] @relation("ProjectCreator")
  assignedCandidates Candidate[] @relation("CandidateRecruiter")
  notifications Notification[]
  auditLogs     AuditLog[]

  @@index([email]) // Already unique, but explicit index for auth queries
  @@index([createdAt]) // For user listing and analytics
  @@map("users")
}

model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  userRoles   UserRole[]
  rolePermissions RolePermission[]

  @@map("roles")
}

model Permission {
  id          String   @id @default(cuid())
  key         String   @unique // e.g., 'read:projects', 'manage:users'
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  rolePermissions RolePermission[]

  @@map("permissions")
}

model RolePermission {
  roleId       String
  permissionId String

  // Relations
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
  @@index([roleId]) // Optimize role permission lookups
  @@index([permissionId]) // Optimize permission-based queries
  @@map("role_permissions")
}

model UserRole {
  userId String
  roleId String

  // Relations
  user         User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role         Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
  @@index([userId]) // Optimize user role lookups
  @@index([roleId]) // Optimize role-based queries
  @@map("user_roles")
}

model Team {
  id        String   @id @default(cuid())
  name      String   @unique
  leadId    String?
  headId    String?
  managerId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userTeams UserTeam[]
  projects  Project[]
  candidates Candidate[]

  @@map("teams")
}

model UserTeam {
  userId String
  teamId String

  // Relations
  user         User @relation(fields: [userId], references: [id], onDelete: Cascade)
  team         Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@id([userId, teamId])
  @@map("user_teams")
}

model Client {
  id              String   @id @default(cuid())
  name            String
  type            ClientType
  pointOfContact  String?
  email           String?
  phone           String?
  address         String?
  
  // Individual Referrer specific fields
  profession      String?
  organization    String?
  relationship    IndividualRelationship?
  
  // Sub-Agency specific fields
  agencyType      AgencyType?
  specialties     Json     @default("[]")
  
  // Healthcare Organization specific fields
  facilityType    FacilityType?
  facilitySize    FacilitySize?
  locations       Json     @default("[]")
  
  // External Source specific fields
  sourceType      ExternalSourceType?
  sourceName      String?
  acquisitionMethod AcquisitionMethod?
  sourceNotes     String?
  
  // Optional financial fields
  relationshipType RelationshipType?
  commissionRate   Float?
  paymentTerms     String?
  contractStartDate DateTime?
  contractEndDate   DateTime?
  billingAddress    String?
  taxId             String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  projects        Project[]

  @@map("clients")
}

enum ClientType {
  INDIVIDUAL
  SUB_AGENCY
  HEALTHCARE_ORGANIZATION
  EXTERNAL_SOURCE
}

enum IndividualRelationship {
  CURRENT_EMPLOYEE
  FORMER_EMPLOYEE
  NETWORK_CONTACT
}

enum AgencyType {
  LOCAL
  REGIONAL
  SPECIALIZED
}

enum FacilityType {
  HOSPITAL
  CLINIC
  NURSING_HOME
  MEDICAL_CENTER
}

enum FacilitySize {
  SMALL
  MEDIUM
  LARGE
}

enum ExternalSourceType {
  JOB_BOARD
  SOCIAL_MEDIA
  REFERRAL_PLATFORM
  INDUSTRY_EVENT
  COLD_OUTREACH
  OTHER
}

enum AcquisitionMethod {
  ORGANIC
  PAID
  PARTNERSHIP
  REFERRAL
}

enum RelationshipType {
  REFERRAL
  PARTNERSHIP
  DIRECT_CLIENT
  EXTERNAL_SOURCE
}

model Project {
  id          String   @id @default(cuid())
  clientId    String
  title       String
  description String?
  deadline    DateTime?
  status      String   @default("active") // active, completed, cancelled
  createdBy   String
  teamId      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  client      Client   @relation(fields: [clientId], references: [id])
  creator     User     @relation("ProjectCreator", fields: [createdBy], references: [id])
  team        Team?    @relation(fields: [teamId], references: [id])
  rolesNeeded RoleNeeded[]
  candidateProjects CandidateProjectMap[]

  @@map("projects")
}

model RoleNeeded {
  id          String   @id @default(cuid())
  projectId   String
  
  // Basic Info
  designation String
  quantity    Int
  priority    String   @default("medium") // low, medium, high, urgent
  
  // Experience Requirements
  minExperience Int?
  maxExperience Int?
  specificExperience Json?  // ["ICU", "ER", "Leadership"]
  
  // Educational Requirements
  educationRequirements Json?  // ["BSN", "MSN"]
  requiredCertifications Json? // ["RN", "BLS", "ACLS"]
  institutionRequirements String?
  
  // Skills & Competencies
  skills      Json     @default("[]")
  technicalSkills Json? // ["EPIC", "Ventilator Management"]
  languageRequirements Json? // ["English", "Spanish"]
  
  // Licensing & Compliance
  licenseRequirements Json? // ["State RN License", "Compact License"]
  backgroundCheckRequired Boolean @default(true)
  drugScreeningRequired Boolean @default(true)
  
  // Work Conditions
  shiftType   String?  // "day", "night", "rotating", "flexible"
  onCallRequired Boolean @default(false)
  physicalDemands String?
  
  // Compensation
  salaryRange Json? // {"min": 60000, "max": 80000, "currency": "USD"}
  benefits    String?
  relocationAssistance Boolean @default(false)
  
  // Additional Requirements
  additionalRequirements String?
  notes       String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("roles_needed")
}

model Candidate {
  id            String   @id @default(cuid())
  name          String
  contact       String   @unique
  email         String?
  source        String   @default("manual") // manual, meta, referral
  dateOfBirth   DateTime?
  currentStatus String   @default("new") // new, shortlisted, selected, rejected, hired
  experience    Int?
  skills        Json     @default("[]")
  currentEmployer String?
  expectedSalary Int?
  assignedTo    String?
  teamId        String?  // Added for team scoping
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  recruiter    User?    @relation("CandidateRecruiter", fields: [assignedTo], references: [id])
  team         Team?    @relation(fields: [teamId], references: [id])
  projects     CandidateProjectMap[]
  documents    Document[]
  interviews   Interview[]
  processing   Processing?
  certifications Certification[]
  talentPool   TalentPool?

  @@map("candidates")
}

model CandidateProjectMap {
  id          String   @id @default(cuid())
  candidateId String
  projectId   String
  assignedDate DateTime @default(now())
  verified    Boolean  @default(false)
  shortlisted Boolean  @default(false)
  selected    Boolean  @default(false)
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  candidate   Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([candidateId, projectId])
  @@map("candidate_project_map")
}

model Document {
  id          String   @id @default(cuid())
  candidateId String
  docType     String   // resume, aadhaar, passport, medical, etc.
  fileName    String
  fileUrl     String
  uploadedBy  String
  verifiedBy  String?
  status      String   @default("pending") // pending, verified, rejected
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  candidate   Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@map("documents")
}

model Interview {
  id            String   @id @default(cuid())
  candidateId   String
  projectId     String?
  scheduledTime DateTime
  duration      Int      @default(60) // minutes
  type          String   @default("technical") // technical, hr, final
  outcome       String?  // passed, failed, rescheduled
  notes         String?
  interviewer   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  candidate     Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@map("interviews")
}

model Processing {
  id            String   @id @default(cuid())
  candidateId   String   @unique
  qvpStatus     String   @default("pending") // pending, completed, failed
  medicalStatus String   @default("pending") // pending, passed, failed
  visaStatus    String   @default("pending") // pending, approved, rejected
  travelStatus  String   @default("pending") // pending, booked, completed
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  candidate     Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@map("processing")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String   // document_verification, interview_reminder, etc.
  title     String
  message   String
  seen      Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

model Certification {
  id              String   @id @default(cuid())
  candidateId     String
  certName        String
  status          String   @default("pending") // pending, passed, failed
  examDate        DateTime?
  validUntil      DateTime?
  exportedToLearning Boolean @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  candidate       Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@map("certifications")
}

model TalentPool {
  id              String   @id @default(cuid())
  candidateId     String   @unique
  role            String
  yearsExperience Int
  currentEmployer String?
  isAvailable     Boolean  @default(true)
  rating          Int?     // 1-5 rating
  notes           String?
  sourceProjectId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  candidate       Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@map("talent_pool")
}



model AuditLog {
  id         String   @id @default(cuid())
  actionType String   // create, update, delete
  entityId   String
  entityType String   // user, candidate, project, etc.
  userId     String
  changes    Json     @default("{}")
  timestamp  DateTime @default(now())

  // Relations
  user       User     @relation(fields: [userId], references: [id])

  @@map("audit_logs")
}
