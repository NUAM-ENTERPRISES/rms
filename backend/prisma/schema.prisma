// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String
  password      String
  dateOfBirth   DateTime?
  phone         String?
  roleId        String
  teamId        String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  role          Role     @relation(fields: [roleId], references: [id])
  team          Team?    @relation(fields: [teamId], references: [id])
  createdProjects Project[] @relation("ProjectCreator")
  assignedCandidates Candidate[] @relation("CandidateRecruiter")
  notifications Notification[]
  auditLogs     AuditLog[]

  @@map("users")
}

model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  permissions Json     @default("[]")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users       User[]

  @@map("roles")
}

model Team {
  id        String   @id @default(cuid())
  name      String
  leadId    String?
  headId    String?
  managerId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  users     User[]
  projects  Project[]

  @@map("teams")
}

model Client {
  id              String   @id @default(cuid())
  name            String
  type            String
  pointOfContact  String?
  email           String?
  phone           String?
  address         String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  projects        Project[]

  @@map("clients")
}

model Project {
  id          String   @id @default(cuid())
  clientId    String
  title       String
  description String?
  deadline    DateTime?
  status      String   @default("active") // active, completed, cancelled
  createdBy   String
  teamId      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  client      Client   @relation(fields: [clientId], references: [id])
  creator     User     @relation("ProjectCreator", fields: [createdBy], references: [id])
  team        Team?    @relation(fields: [teamId], references: [id])
  rolesNeeded RoleNeeded[]
  candidateProjects CandidateProjectMap[]

  @@map("projects")
}

model RoleNeeded {
  id          String   @id @default(cuid())
  projectId   String
  designation String
  quantity    Int
  priority    String   @default("medium") // low, medium, high, urgent
  minExperience Int?
  maxExperience Int?
  skills      Json     @default("[]")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("roles_needed")
}

model Candidate {
  id            String   @id @default(cuid())
  name          String
  contact       String   @unique
  email         String?
  source        String   @default("manual") // manual, meta, referral
  dateOfBirth   DateTime?
  currentStatus String   @default("new") // new, shortlisted, selected, rejected, hired
  experience    Int?
  skills        Json     @default("[]")
  currentEmployer String?
  expectedSalary Int?
  assignedTo    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  recruiter    User?    @relation("CandidateRecruiter", fields: [assignedTo], references: [id])
  projects     CandidateProjectMap[]
  documents    Document[]
  interviews   Interview[]
  processing   Processing?
  certifications Certification[]
  talentPool   TalentPool?

  @@map("candidates")
}

model CandidateProjectMap {
  id          String   @id @default(cuid())
  candidateId String
  projectId   String
  assignedDate DateTime @default(now())
  verified    Boolean  @default(false)
  shortlisted Boolean  @default(false)
  selected    Boolean  @default(false)
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  candidate   Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([candidateId, projectId])
  @@map("candidate_project_map")
}

model Document {
  id          String   @id @default(cuid())
  candidateId String
  docType     String   // resume, aadhaar, passport, medical, etc.
  fileName    String
  fileUrl     String
  uploadedBy  String
  verifiedBy  String?
  status      String   @default("pending") // pending, verified, rejected
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  candidate   Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@map("documents")
}

model Interview {
  id            String   @id @default(cuid())
  candidateId   String
  projectId     String?
  scheduledTime DateTime
  duration      Int      @default(60) // minutes
  type          String   @default("technical") // technical, hr, final
  outcome       String?  // passed, failed, rescheduled
  notes         String?
  interviewer   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  candidate     Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@map("interviews")
}

model Processing {
  id            String   @id @default(cuid())
  candidateId   String   @unique
  qvpStatus     String   @default("pending") // pending, completed, failed
  medicalStatus String   @default("pending") // pending, passed, failed
  visaStatus    String   @default("pending") // pending, approved, rejected
  travelStatus  String   @default("pending") // pending, booked, completed
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  candidate     Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@map("processing")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String   // document_verification, interview_reminder, etc.
  title     String
  message   String
  seen      Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

model Certification {
  id              String   @id @default(cuid())
  candidateId     String
  certName        String
  status          String   @default("pending") // pending, passed, failed
  examDate        DateTime?
  validUntil      DateTime?
  exportedToLearning Boolean @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  candidate       Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@map("certifications")
}

model TalentPool {
  id              String   @id @default(cuid())
  candidateId     String   @unique
  role            String
  yearsExperience Int
  currentEmployer String?
  isAvailable     Boolean  @default(true)
  rating          Int?     // 1-5 rating
  notes           String?
  sourceProjectId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  candidate       Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@map("talent_pool")
}

model AuditLog {
  id         String   @id @default(cuid())
  actionType String   // create, update, delete
  entityId   String
  entityType String   // user, candidate, project, etc.
  userId     String
  changes    Json     @default("{}")
  timestamp  DateTime @default(now())

  // Relations
  user       User     @relation(fields: [userId], references: [id])

  @@map("audit_logs")
}
