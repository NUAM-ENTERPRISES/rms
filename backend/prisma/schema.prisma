// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RefreshToken {
  id         String   @id @default(cuid()) // public token id (rfi)
  userId     String
  familyId   String
  hash       String               // Argon2 hash of the secret value (rft)
  expiresAt  DateTime
  revokedAt  DateTime?
  createdAt  DateTime @default(now())

  user       User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([familyId])
  @@index([expiresAt])
  @@map("refresh_tokens")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String
  password      String
  dateOfBirth   DateTime?
  countryCode   String   // Country calling code (e.g., "+91", "+1")
  phone         String   // Phone number without country code (e.g., "9876543210")
  profileImage  String?  // Profile image URL stored in Digital Ocean Spaces
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  userRoles     UserRole[]
  userTeams     UserTeam[]
  refreshTokens RefreshToken[]
  createdProjects Project[] @relation("ProjectCreator")
  assignedCandidates Candidate[] @relation("CandidateRecruiter")
  notifications Notification[]
  auditLogs     AuditLog[]

  @@unique([countryCode, phone]) // Unique constraint on combination
  @@index([email]) // Keep email indexed for lookups
  @@index([countryCode, phone]) // Composite index for authentication queries
  @@index([createdAt]) // For user listing and analytics
  @@map("users")
}

model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  userRoles   UserRole[]
  rolePermissions RolePermission[]

  @@map("roles")
}

model Permission {
  id          String   @id @default(cuid())
  key         String   @unique // e.g., 'read:projects', 'manage:users'
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  rolePermissions RolePermission[]

  @@map("permissions")
}

model RolePermission {
  roleId       String
  permissionId String

  // Relations
  role         Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
  @@index([roleId]) // Optimize role permission lookups
  @@index([permissionId]) // Optimize permission-based queries
  @@map("role_permissions")
}

model UserRole {
  userId String
  roleId String

  // Relations
  user         User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role         Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
  @@index([userId]) // Optimize user role lookups
  @@index([roleId]) // Optimize role-based queries
  @@map("user_roles")
}

model Team {
  id        String   @id @default(cuid())
  name      String   @unique
  leadId    String?
  headId    String?
  managerId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userTeams UserTeam[]
  projects  Project[]
  candidates Candidate[]

  @@map("teams")
}

model UserTeam {
  userId String
  teamId String

  // Relations
  user         User @relation(fields: [userId], references: [id], onDelete: Cascade)
  team         Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@id([userId, teamId])
  @@map("user_teams")
}

model Client {
  id              String   @id @default(cuid())
  name            String
  type            ClientType
  pointOfContact  String?
  email           String?
  phone           String?
  address         String?
  
  // Individual Referrer specific fields
  profession      String?
  organization    String?
  relationship    IndividualRelationship?
  
  // Sub-Agency specific fields
  agencyType      AgencyType?
  specialties     Json     @default("[]")
  
  // Healthcare Organization specific fields
  facilityType    FacilityType?
  facilitySize    FacilitySize?
  locations       Json     @default("[]")
  
  // External Source specific fields
  sourceType      ExternalSourceType?
  sourceName      String?
  acquisitionMethod AcquisitionMethod?
  sourceNotes     String?
  
  // Optional financial fields
  relationshipType RelationshipType?
  commissionRate   Float?
  paymentTerms     String?
  contractStartDate DateTime?
  contractEndDate   DateTime?
  billingAddress    String?
  taxId             String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  projects        Project[]

  @@map("clients")
}

enum ClientType {
  INDIVIDUAL
  SUB_AGENCY
  HEALTHCARE_ORGANIZATION
  EXTERNAL_SOURCE
}

enum IndividualRelationship {
  CURRENT_EMPLOYEE
  FORMER_EMPLOYEE
  NETWORK_CONTACT
}

enum AgencyType {
  LOCAL
  REGIONAL
  SPECIALIZED
}

enum FacilityType {
  HOSPITAL
  CLINIC
  NURSING_HOME
  MEDICAL_CENTER
}

enum FacilitySize {
  SMALL
  MEDIUM
  LARGE
}

enum ExternalSourceType {
  JOB_BOARD
  SOCIAL_MEDIA
  REFERRAL_PLATFORM
  INDUSTRY_EVENT
  COLD_OUTREACH
  OTHER
}

enum AcquisitionMethod {
  ORGANIC
  PAID
  PARTNERSHIP
  REFERRAL
}

enum RelationshipType {
  REFERRAL
  PARTNERSHIP
  DIRECT_CLIENT
  EXTERNAL_SOURCE
}

model Country {
  code        String   @id // ISO-2 country code (e.g., "US", "IN", "GB")
  name        String   // Country name (e.g., "United States", "India")
  region      String   // Region (e.g., "North America", "Asia")
  callingCode String   // International calling code (e.g., "+1", "+91")
  currency    String   // Currency code (e.g., "USD", "INR")
  timezone    String   // Primary timezone (e.g., "America/New_York")
  isActive    Boolean  @default(true) // Whether country is active for selection
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  projects                    Project[]
  qualificationCountryProfiles QualificationCountryProfile[]
  qualificationEquivalencies  QualificationEquivalency[]
  roleRecommendedQualifications RoleRecommendedQualification[]

  @@map("countries")
}

model Project {
  id          String   @id @default(cuid())
  clientId    String?
  title       String
  description String?
  deadline    DateTime?
  status      String   @default("active") // active, completed, cancelled
  priority    String   @default("medium") // low, medium, high, urgent
  createdBy   String
  teamId      String?
  countryCode String?  // ISO-2 country code (e.g., "US", "IN", "GB")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  client      Client?  @relation(fields: [clientId], references: [id])
  creator     User     @relation("ProjectCreator", fields: [createdBy], references: [id])
  team        Team?    @relation(fields: [teamId], references: [id])
  country     Country? @relation(fields: [countryCode], references: [code])
  rolesNeeded RoleNeeded[]
  candidateProjects CandidateProjectMap[]
  documentRequirements DocumentRequirement[]

  @@map("projects")
}

model RoleNeeded {
  id          String   @id @default(cuid())
  projectId   String
  
  // Basic Info
  designation String
  quantity    Int
  priority    String   @default("medium") // low, medium, high, urgent
  
  // Experience Requirements
  minExperience Int?
  maxExperience Int?
  specificExperience Json?  // ["ICU", "ER", "Leadership"]
  
  // Educational Requirements (Legacy - keep for backward compatibility)
  educationRequirements Json?  // ["BSN", "MSN"] - LEGACY: use educationRequirementsList instead
  requiredCertifications Json? // ["RN", "BLS", "ACLS"]
  institutionRequirements String?
  
  // Skills & Competencies
  skills      Json     @default("[]")
  technicalSkills Json? // ["EPIC", "Ventilator Management"]
  languageRequirements Json? // ["English", "Spanish"]
  
  // Licensing & Compliance
  licenseRequirements Json? // ["State RN License", "Compact License"]
  backgroundCheckRequired Boolean @default(true)
  drugScreeningRequired Boolean @default(true)
  
  // Work Conditions
  shiftType   String?  // "day", "night", "rotating", "flexible"
  onCallRequired Boolean @default(false)
  physicalDemands String?
  
  // Compensation
  salaryRange Json? // {"min": 60000, "max": 80000, "currency": "USD"}
  benefits    String?
  relocationAssistance Boolean @default(false)
  
  // Additional Requirements
  additionalRequirements String?
  notes       String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  educationRequirementsList RoleNeededEducationRequirement[] // NEW: normalized education requirements

  @@map("roles_needed")
}

model Candidate {
  id            String   @id @default(cuid())
  firstName     String
  lastName      String
  contact       String   @unique
  email         String?
  profileImage  String?  // Profile image URL stored in Digital Ocean Spaces
  source        String   @default("manual") // manual, meta, referral
  dateOfBirth   DateTime // Made mandatory
  currentStatus String   @default("new") // new, shortlisted, selected, rejected, hired
  
  // Educational Qualifications
  highestEducation String? // BSc, MSc, PhD, Diploma, etc.
  university       String?
  graduationYear   Int?
  gpa              Float?
  
  // Professional Experience
  totalExperience  Int? // Total years of experience
  currentSalary    Int? // Current salary
  expectedSalary   Int?
  currentEmployer  String?
  currentRole      String? // Current job title/role
  
  // Legacy fields for backward compatibility
  experience    Int? // Deprecated - use totalExperience
  skills        Json     @default("[]")
  assignedTo    String?
  teamId        String?  // Added for team scoping
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  recruiter    User?    @relation("CandidateRecruiter", fields: [assignedTo], references: [id])
  team         Team?    @relation(fields: [teamId], references: [id])
  projects     CandidateProjectMap[]
  documents    Document[]
  certifications Certification[]
  talentPool   TalentPool?
  workExperiences WorkExperience[]

  @@index([assignedTo])
  @@index([teamId])
  @@index([currentStatus])
  @@map("candidates")
}

model WorkExperience {
  id            String   @id @default(cuid())
  candidateId   String
  companyName   String
  jobTitle      String
  startDate     DateTime
  endDate       DateTime?
  isCurrent     Boolean  @default(false)
  description   String?
  salary        Int?     // Salary at this position
  location      String?
  skills        Json     @default("[]") // Skills gained/used in this role
  achievements  String?  // Key achievements
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  candidate     Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@index([candidateId])
  @@index([companyName])
  @@index([jobTitle])
  @@map("work_experiences")
}

model CandidateProjectMap {
  id          String   @id @default(cuid())
  candidateId String
  projectId   String
  
  // Workflow Status (NEW - replaces old boolean flags)
  status      String   @default("nominated") // nominated, pending_documents, documents_submitted, verification_in_progress, documents_verified, approved, interview_scheduled, interview_completed, interview_passed, selected, processing, hired, rejected_documents, rejected_interview, rejected_selection, withdrawn, on_hold
  
  // Dates (Track lifecycle)
  nominatedDate DateTime @default(now())
  documentsSubmittedDate DateTime?
  documentsVerifiedDate  DateTime?
  approvedDate           DateTime?
  selectedDate           DateTime?
  hiredDate              DateTime?
  rejectedDate           DateTime?
  
  // Actors
  nominatedBy  String // User ID who nominated candidate to project
  approvedBy   String? // User ID who approved after document verification
  rejectedBy   String?
  
  // Metadata
  notes        String?
  rejectionReason String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  candidate   Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  interviews  Interview[]
  processing  Processing?
  documentVerifications CandidateProjectDocumentVerification[]

  @@unique([candidateId, projectId])
  @@index([status])
  @@index([nominatedBy])
  @@map("candidate_project_map")
}

model Document {
  id          String   @id @default(cuid())
  candidateId String
  docType     String   // passport, professional_license, degree, resume, etc. (from DOCUMENT_TYPE constants)
  fileName    String
  fileUrl     String   // Digital Ocean Spaces URL
  fileSize    Int?     // in bytes
  mimeType    String?
  
  // Status tracking
  status      String   @default("pending") // pending, verified, rejected, expired, resubmission_required (from DOCUMENT_STATUS constants)
  
  // Verification
  uploadedBy  String   // User ID
  verifiedBy  String?  // Document Verification Team user ID
  verifiedAt  DateTime?
  rejectedBy  String?
  rejectedAt  DateTime?
  
  // Expiry (for documents that expire like passport, licenses)
  expiryDate  DateTime?
  
  // Metadata
  notes       String?
  rejectionReason String?
  documentNumber String?  // e.g., Passport number, License number
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  candidate   Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  verifications CandidateProjectDocumentVerification[]

  @@index([candidateId])
  @@index([docType])
  @@index([status])
  @@map("documents")
}

model Interview {
  id                      String   @id @default(cuid())
  candidateProjectMapId   String   // CHANGED: Link to specific project nomination
  scheduledTime           DateTime
  duration                Int      @default(60) // minutes
  type                    String   @default("technical") // technical, hr, final, panel
  mode                    String?  @default("video") // video, phone, in_person
  outcome                 String?  // passed, failed, rescheduled, no_show, cancelled (from INTERVIEW_OUTCOME constants)
  notes                   String?
  interviewer             String?  // User ID or external interviewer name
  interviewerEmail        String?
  meetingLink             String?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  // Relations
  candidateProjectMap     CandidateProjectMap @relation(fields: [candidateProjectMapId], references: [id], onDelete: Cascade)

  @@index([candidateProjectMapId])
  @@index([scheduledTime])
  @@map("interviews")
}

model Processing {
  id                      String   @id @default(cuid())
  candidateProjectMapId   String   @unique // CHANGED: Link to specific project nomination
  
  // QVP Stage
  qvpStatus               String   @default("not_started") // not_started, in_progress, completed, failed
  qvpStartDate            DateTime?
  qvpCompletionDate       DateTime?
  
  // Medical Stage
  medicalStatus           String   @default("not_started") // not_started, in_progress, completed, failed
  medicalClearance        String?  // fit, unfit, conditional
  medicalStartDate        DateTime?
  medicalCompletionDate   DateTime?
  medicalNotes            String?
  
  // Visa Stage
  visaStatus              String   @default("not_started") // not_started, in_progress, approved, rejected, on_hold
  visaType                String?
  visaApplicationDate     DateTime?
  visaApprovalDate        DateTime?
  visaExpiryDate          DateTime?
  visaNotes               String?
  
  // Travel Stage
  travelStatus            String   @default("not_started") // not_started, booking_in_progress, booked, completed
  flightBookedDate        DateTime?
  departureDate           DateTime?
  arrivalDate             DateTime?
  travelNotes             String?
  
  // Joining
  joiningStatus           String   @default("pending") // pending, joined, no_show, delayed
  expectedJoiningDate     DateTime?
  actualJoiningDate       DateTime?
  joiningNotes            String?
  
  // General
  notes                   String?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  // Relations
  candidateProjectMap     CandidateProjectMap @relation(fields: [candidateProjectMapId], references: [id], onDelete: Cascade)

  @@index([candidateProjectMapId])
  @@map("processing")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String   // document_verification, interview_reminder, etc.
  title     String
  message   String
  seen      Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

model Certification {
  id              String   @id @default(cuid())
  candidateId     String
  certName        String
  status          String   @default("pending") // pending, passed, failed
  examDate        DateTime?
  validUntil      DateTime?
  exportedToLearning Boolean @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  candidate       Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@map("certifications")
}

model TalentPool {
  id              String   @id @default(cuid())
  candidateId     String   @unique
  role            String
  yearsExperience Int
  currentEmployer String?
  isAvailable     Boolean  @default(true)
  rating          Int?     // 1-5 rating
  notes           String?
  sourceProjectId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  candidate       Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)

  @@map("talent_pool")
}



// ==================== NEW MODELS FOR DOCUMENT VERIFICATION WORKFLOW ====================

/**
 * DocumentRequirement
 * Defines what documents are required for a specific project
 * Set by recruiter/manager when creating/updating a project
 */
model DocumentRequirement {
  id          String   @id @default(cuid())
  projectId   String
  docType     String   // From DOCUMENT_TYPE constants (passport, professional_license, etc.)
  mandatory   Boolean  @default(true)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, docType])
  @@index([projectId])
  @@map("document_requirements")
}

/**
 * CandidateProjectDocumentVerification
 * Junction table linking Documents to specific Project nominations
 * Tracks verification status of each document for each project
 * Multiple projects can reference the same document (e.g., same passport for multiple projects)
 */
model CandidateProjectDocumentVerification {
  id                      String   @id @default(cuid())
  candidateProjectMapId   String   // Which project nomination this verification is for
  documentId              String   // Which document is being verified
  
  // Verification Status
  status                  String   @default("pending") // pending, verified, rejected (from DOCUMENT_STATUS constants)
  verifiedBy              String?  // Document Verification Team user ID
  verifiedAt              DateTime?
  rejectedBy              String?
  rejectedAt              DateTime?
  
  // Metadata
  notes                   String?
  rejectionReason         String?
  resubmissionRequested   Boolean  @default(false)
  resubmissionRequestedAt DateTime?
  resubmissionRequestedBy String?
  
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  // Relations
  candidateProjectMap     CandidateProjectMap @relation(fields: [candidateProjectMapId], references: [id], onDelete: Cascade)
  document                Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@unique([candidateProjectMapId, documentId])
  @@index([candidateProjectMapId])
  @@index([documentId])
  @@index([status])
  @@map("candidate_project_document_verifications")
}

// ==================== HEALTHCARE ROLES CATALOG ====================

/**
 * RoleCatalog
 * Normalized catalog of healthcare and general staff roles
 * Separate from system RBAC roles (Role model)
 */
model RoleCatalog {
  id          String   @id @default(cuid())
  name        String   @unique // e.g., "Registered Nurse (RN)", "Cardiologist"
  slug        String   @unique // e.g., "registered-nurse-rn", "cardiologist"
  category    String   // "Clinical", "Non-Clinical"
  subCategory String?  // "Physicians & Surgeons", "Nursing", "Allied Health", etc.
  isClinical  Boolean  @default(true)
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  recommendedQualifications RoleRecommendedQualification[]

  @@index([category])
  @@index([isClinical])
  @@index([isActive])
  @@map("role_catalog")
}

/**
 * Qualification
 * Normalized catalog of educational qualifications, degrees, and certifications
 */
model Qualification {
  id          String   @id @default(cuid())
  name        String   @unique // e.g., "Bachelor of Science in Nursing (BSN)"
  shortName   String?  // e.g., "BSN"
  level       QualificationLevel
  field       String   // e.g., "Nursing", "Medicine", "Allied Health"
  program     String?  // e.g., "Bachelor of Science", "Master of Medicine"
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  aliases               QualificationAlias[]
  countryProfiles       QualificationCountryProfile[]
  equivalencies         QualificationEquivalency[] @relation("FromQualification")
  reverseEquivalencies  QualificationEquivalency[] @relation("ToQualification")
  roleRecommendations   RoleRecommendedQualification[]
  roleNeededRequirements RoleNeededEducationRequirement[]

  @@index([level])
  @@index([field])
  @@index([isActive])
  @@map("qualifications")
}

enum QualificationLevel {
  CERTIFICATE
  DIPLOMA
  BACHELOR
  MASTER
  DOCTORATE
}

/**
 * QualificationAlias
 * Alternative names for qualifications (e.g., "RN" for "Registered Nurse")
 */
model QualificationAlias {
  id              String        @id @default(cuid())
  qualificationId String
  alias           String
  isCommon        Boolean       @default(false) // Mark commonly used aliases
  createdAt       DateTime      @default(now())

  // Relations
  qualification   Qualification @relation(fields: [qualificationId], references: [id], onDelete: Cascade)

  @@unique([qualificationId, alias])
  @@index([alias])
  @@map("qualification_aliases")
}

/**
 * QualificationCountryProfile
 * Country-specific information for qualifications
 */
model QualificationCountryProfile {
  id                  String        @id @default(cuid())
  qualificationId     String
  countryCode         String        // ISO-2 country code
  regulatedTitle      String?       // Official title in that country
  issuingBody         String?       // e.g., "Nursing Council of India"
  accreditationStatus String?       // "Recognized", "Pending", "Not Recognized"
  notes               String?
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt

  // Relations
  qualification       Qualification @relation(fields: [qualificationId], references: [id], onDelete: Cascade)
  country             Country       @relation(fields: [countryCode], references: [code])

  @@unique([qualificationId, countryCode])
  @@index([countryCode])
  @@map("qualification_country_profiles")
}

/**
 * QualificationEquivalency
 * Cross-qualification equivalence mapping
 */
model QualificationEquivalency {
  id                  String        @id @default(cuid())
  fromQualificationId String
  toQualificationId   String
  countryCode         String?       // Optional: equivalence specific to country
  isEquivalent        Boolean       @default(true)
  notes               String?
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt

  // Relations
  fromQualification   Qualification @relation("FromQualification", fields: [fromQualificationId], references: [id], onDelete: Cascade)
  toQualification     Qualification @relation("ToQualification", fields: [toQualificationId], references: [id], onDelete: Cascade)
  country             Country?      @relation(fields: [countryCode], references: [code])

  @@unique([fromQualificationId, toQualificationId, countryCode])
  @@index([fromQualificationId])
  @@index([toQualificationId])
  @@map("qualification_equivalencies")
}

/**
 * RoleRecommendedQualification
 * Mapping of recommended qualifications for specific roles
 */
model RoleRecommendedQualification {
  id              String        @id @default(cuid())
  roleId          String
  qualificationId String
  weight          Int           @default(1) // Higher weight = more important/preferred
  countryCode     String?       // Optional: recommendation specific to country
  isPreferred     Boolean       @default(false) // Mark as preferred qualification
  notes           String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  role            RoleCatalog   @relation(fields: [roleId], references: [id], onDelete: Cascade)
  qualification   Qualification @relation(fields: [qualificationId], references: [id], onDelete: Cascade)
  country         Country?      @relation(fields: [countryCode], references: [code])

  @@unique([roleId, qualificationId, countryCode])
  @@index([roleId])
  @@index([qualificationId])
  @@index([weight])
  @@map("role_recommended_qualifications")
}

/**
 * RoleNeededEducationRequirement
 * Junction table linking RoleNeeded to specific Qualifications
 * Replaces free-text educationRequirements with normalized IDs
 */
model RoleNeededEducationRequirement {
  id              String        @id @default(cuid())
  roleNeededId    String
  qualificationId String
  mandatory       Boolean       @default(true) // true = required, false = preferred
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  roleNeeded      RoleNeeded    @relation(fields: [roleNeededId], references: [id], onDelete: Cascade)
  qualification   Qualification @relation(fields: [qualificationId], references: [id], onDelete: Cascade)

  @@unique([roleNeededId, qualificationId])
  @@index([roleNeededId])
